# -------------------------------
# 1. Используем официальный Python 3.12 slim образ
# -------------------------------
FROM python:3.12-slim

# -------------------------------
# 2. Устанавливаем системные зависимости
# -------------------------------
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        curl \
        git \
        && rm -rf /var/lib/apt/lists/*

# -------------------------------
# 3. Устанавливаем Poetry
# -------------------------------
ENV POETRY_VERSION=1.8.1
RUN curl -sSL https://install.python-poetry.org | python3 -

# Добавляем poetry в PATH
ENV PATH="/root/.local/bin:$PATH"

# -------------------------------
# 4. Создаём рабочую директорию
# -------------------------------
WORKDIR /app

# -------------------------------
# 5. Копируем pyproject.toml и poetry.lock для кеширования зависимостей
# -------------------------------
COPY pyproject.toml poetry.lock* /app/

# -------------------------------
# 6. Устанавливаем зависимости
# -------------------------------
RUN poetry config virtualenvs.create false && \
    poetry install --no-interaction --no-ansi

# -------------------------------
# 7. Копируем исходники проекта
# -------------------------------
COPY . /app

# -------------------------------
# 8. Экспонируем порт приложения
# -------------------------------
EXPOSE 8001

# -------------------------------
# 9. Команда запуска FastAPI через uvicorn
# -------------------------------
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8001", "--reload"]
